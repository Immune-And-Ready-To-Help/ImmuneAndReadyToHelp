@page
@model ImmuneAndReadyToHelp.Pages.DeleteOpportunityModel
@{
    ViewData["Title"] = "Delete: " + Model.Title;
    Layout = "_Layout";
}

@section Head{
    <link rel="icon" type="image/png" href="~/images/Antibody.png" />
    <link rel="stylesheet" type="text/css" href="~/css/map-form.css" asp-append-version="true" />

    <style>
        .opp-title {
            padding-left: 10px;
            text-overflow: ellipsis;
            overflow: hidden;
        }

        .opp-image {
            width: 80px;
        }

        .container {
            width: 100% !important;
            margin-bottom: 8px;
        }
    </style>
}


<div class="container-contact100">
    <div class="contact100-map" id="google_map" longitude="@Model.OpportunityLocation.Longitude" latitude="@Model.OpportunityLocation.Latitude" data-pin="images/icons/map-marker.png" data-scrollwhell="0" data-draggable="1"></div>

    <div class="wrap-contact100">
        <form class="contact100-form validate-form">
            <div class="container">
                <div class="row">
                    <div class="col-xs-3">
                        <img class="opp-image" src="@Model.CompanyLogoUri" />
                    </div>
                    <div class="col-xs-9">
                        <span class="contact100-form-title opp-title">
                            Opportunity Deactivated: @Model.Title
                        </span>
                    </div>
                </div>
            </div>
            <div class="opp-info">
                <span>
                    Your opportunity will no longer be discoverable to future applicants. If you'd like to reactivate the opportunity, you
                    may do so by clicking the activation link in your opportunity management email.
                </span>
            </div>

            <div class="container-contact100-form-btn">
                <button id="view-opportunity-button" class="contact100-form-btn">
                    Go To Home Page
                </button>
            </div>
        </form>
    </div>
</div>

<!--===============================================================================================-->

@section Scripts{
    <script defer src="@Href("https://maps.googleapis.com/maps/api/js?&key=" + Model.GoogleMapsApiKey)">
    </script>

    <script defer src="~/js/form-map.js" asp-append-version="true"></script>

    <script>
        $( "#view-opportunity-button" ).click(() => {
            window.location = "/";
            return false;
        });
    </script>
}
